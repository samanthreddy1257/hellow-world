pipeline {
    
    agent any
    
    stages {
        
        stage ('git checkout'){
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/samanthreddy1257/hellow-world.git'
                }
            }
        }
        stage ('unit test maven') {
            steps {
                script {
                    sh 'mvn clean test'
                }
            }
        }
        stage ('mvn integration test'){
            steps {
                script{
                    sh 'mvn verify -DskipUnitest'
                }
            }
        }
        stage ('mvn build war file')
            steps {
                sh 'mvn clean package '
                }
            }
        }
    }
}
